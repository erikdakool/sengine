<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      x:class="CoreEngine.XamlController.MyGrid">
    <Grid.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0" Color="#FF123F61"/>
            <GradientStop Offset="0.6" Color="#FF0E4B79"/>
            <GradientStop Offset="0.7" Color="#FF106097"/>
        </LinearGradientBrush>
    </Grid.Background>
    <Viewbox>
        <StackPanel Margin="50">
            <Button x:Name="button" Content="Hello World!" Margin="0,30,0,0"/>
            <Button Width="100" Content="Click me" Click="OnButton1Click"/>
            <Button Width="100" Content="Click me" Click="OnButton2Click"/>
            <Rectangle Height="5" Margin="-10,20,-10,0">
                <Rectangle.Fill>
                    <RadialGradientBrush>
                        <GradientStop Offset="0" Color="#40000000"/>
                        <GradientStop Offset="1" Color="#00000000"/>
                    </RadialGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
        </StackPanel>
    </Viewbox>
</Grid>